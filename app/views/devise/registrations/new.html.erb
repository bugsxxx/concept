

<div class=" row" style="padding-bottom:4%">



</div>

	<div class="panel panel-info col-sm-offset-2" style="color:black;width:70%;">

		<div class="panel-heading" >
		<div class="panel-title">
			Novo Utilizador
		</div>
		</div>
			<div style="margin-top:30px;">

					<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal '}) do |f| %>
					  <%= devise_error_messages! %>


					  <div class="form-group">
					  <label for="email" class="col-sm-offset-2 col-sm-2 control-label">Email:</label>
			 		  <div class="col-sm-4">
					  <%= f.email_field :email, autofocus: true, class: 'inputtext form-control' %>
					  </div>
					  </div>

					  <div class="form-group">
					  <label for="pass" class="col-sm-offset-2 col-sm-2 control-label">Password:</label>
					  

					  <% if @validatable %>
					  
					  <i>(<%= @minimum_password_length %> caracteres no minimo)</i>
					  <% end %>
					 
					  <div class="col-sm-4">
					    <%= f.password_field :password, autocomplete: "off",class: 'inputtext form-control'%>
					   </div> 
					  </div>

					  <div class="form-group">
							   <label for="confpass" class="col-sm-offset-2 col-sm-2 control-label">Confirma:</label>
							    <div class="col-sm-4">
							   <%= f.password_field :password_confirmation, autocomplete: "off", class: 'inputtext form-control' %>
							   </div>

					  </div>

					  <div class="form-group">
			  				<div class="col-sm-offset-4 col-sm-10">
					  			<%= f.submit "Sign up", class: 'btn btn-primary' %>
					  		</div>
					  </div>
					<% end %>


			</div>
			<%= render "devise/shared/links" %>

	</div>



