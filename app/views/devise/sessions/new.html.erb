
<div class=" row" style="padding-bottom:4%">





</div>

<div class="panel panel-info col-sm-offset-2" style="color:black;width:70%;">
	<div class="panel-heading" >
		<div class="panel-title">
			Login
		</div>
	</div>

	<div style="margin-top:30px;">
		<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal '}) do |f| %>
		 

		  <div class="form-group">
			  <label for="email" class="col-sm-offset-2 col-sm-2 control-label">Email:</label>
			  <div class="col-sm-4">
			  <%= f.email_field :email, autofocus: true, class: 'inputtext form-control' %>
			  </div>
		  </div>

		    <div class="form-group">
			  	<label for="pass" class="col-sm-offset-2 col-sm-2 control-label">Password:</label>
			  	<div class="col-sm-4">
			    <%= f.password_field :password, autocomplete: "off", class: 'inputtext form-control' %>
			    </div>
		    </div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="form-group">
		     <div class="col-sm-offset-4 col-sm-10">
		    <%= f.check_box :remember_me %> <%= f.label :remember_me %>
		    </div>
		    </div>
		  <% end -%>

		  <div class="form-group">
			  <div class="col-sm-offset-4 col-sm-10">
			  <%= f.submit "Log in" , class: 'btn btn-primary' %>
			  </div>
		  </div>

		<% end %>
</div>

<div class="col-sm-offset-4">
<%= render "devise/shared/links" %>
</div>



</div>
